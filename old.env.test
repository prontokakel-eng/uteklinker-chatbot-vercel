# .env.test  — används endast vid tortyrtester / autotune

# --- Google Sheets (rate-limit + offline fallback) ---
FAQ_SHEETS_OFFLINE_CACHE=./tests/fixtures/faq-cache
FAQ_SHEETS_READ_MAX_RPM=20
FAQ_SHEETS_READ_RETRIES=3
FAQ_SHEETS_READ_BACKOFF_MS=15000

# --- AI fallback ---
#  true = kör OpenAI (faktiskt AI-svar), false = stäng av (ren FAQ-testrunda)
TESTMODE=false

# --- Lexicon / språkdetektion ---
#  on = tillåt lexicon-override i språkassert, off = strikt språkassert
LEXICON_MODE=on

# --- Rapportering ---
#  Valfri default-plats för rapporter (sviten accepterar --report override)
REPORT_DIR=./reports

# --- Seeds och sampling ---
#  Stabiliserar deterministisk sampling (t.ex. --limit)
TEST_SEED=1337

# --- Performance tweaks ---
#  Default begränsning för korta iterationer
TEST_LIMIT=400
TRUNCATE_INPUT_LEN=180
